        if (nrank==0) then

            call copy_ascii_file(file_dest=recovery_divergence_history_file, file_src=divergence_history_file)
            call copy_ascii_file(file_dest=recovery_sensor_file, file_src=sensor_file)

            ! Setting recovery information  -----------------------------------

